WidgetExample:


<WidgetExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click here"
        on_press:root.click_btn()
        disabled: not root.count_ena
    Label:
        text: root.my_txt
        #font_name: "fonts/Lcd.ttf"
        font_size: "90dp"
        color: 1, 0, 1, 1
    Switch:
        id: aswitch
        active: True
        on_active: root.on_switch(self)
        size_hint: None, 1
        width:"100dp"
    Slider:
        id: my_slider
        min: 0
        max: 100
        # value: 50
        # on_value: root.on_slider(self)
        orientation: "vertical"
        disabled: not aswitch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text:str(int(my_slider.value)) # on_value alternative
        ProgressBar:
            max: 100
            value: int(my_slider.value)
    TextInput:
        id: my_input
        size_hint: None, 1
        width:"100dp"
        multiline: False
        on_text_validate: root.on_text(self)
    Label:
        text: my_input.text







